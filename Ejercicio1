import java.util.Scanner;
public class Programa01 {
    public static void main (String [] args){
        //declarar variable
        int cantidad,candig;
        Scanner lecutura=new Scanner(System.in);
        //entrada de datos
        System.out.print("Ingresar una cantidad:");
        cantidad=lecutura.nextInt();
        //proceso de datos
        candig=0;
        while (cantidad>0){
            //variable contador
            candig++;
            cantidad=cantidad/10;
        }
        //salida de datos
        System.out.println("La cantidadde digitos es:"+candig);
    }
}
